<%= form_for(@event) do |f| %>
  <div class="form-group">
    <%= f.label :Etkinlik_Adi %>
    <%= f.text_field :name, autofocus: true, placeholder: 'Etkinlik Adı', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :ne_zaman? %>
    <%= f.text_field :event_datetime, placeholder: 'Tarihi seçininiz? ', class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit (@event.persisted? ? :update : :create), class: 'btn btn-primary' %>
  </div>
<% end %>
