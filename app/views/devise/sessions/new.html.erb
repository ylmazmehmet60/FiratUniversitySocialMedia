<div class="row" style="
    padding-top: 140px;
    padding-bottom: 140px;
">
  <div class="col-lg-4 col-lg-offset-4 well">
    <h3 class="text-center">Giriş</h3>
    <br>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder: 'email@example.com' %>
      </div>
      <div class="form-group">
        <%= f.label :parola %>
        <%= f.password_field :password, class: 'form-control', autocomplete: 'off', placeholder: 'parola' %>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :hatirla %>
        </div>
      <% end -%>
      <div class="actions">
        <%= f.submit 'Giriş', class: 'btn btn-success' %>
      </div>
    <% end %>
    <br>
    <%= render 'devise/shared/links' %>
  </div>
</div>